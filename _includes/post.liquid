<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width-device-width, initial-scale=1/0">
    <title>{{ title }}</title>

    <link rel="stylesheet" type="text/css" href="../../css/main.css">
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
    <script type="text/javascript" src="../../js/main.js"></script>
  </head>
  <body>
    <header class="site-header">
      <div class="container">
        <div class="site-mast">
          <div class="site-mast-left">
            <a href="../">
              <img class="site-logo" src="../../images/site_logo.png" alt="Relive">
            </a>
          </div>
          <div class="site-mast-right">
          </div>
        </div>
        <div class="site-nav">
          <div class="site-nav-left">
            <a class="site-nav-item" href="../../">Home</a>
            <a class="site-nav-item" href="../../posts/">Posts</a>
            <a class="site-nav-item" href="../../archive/">Archive</a>
          </div>
          <div class="site-nav-right">
            <a class="site-nav-item" href="../../about/">About</a>
          </div>
        </div>
      </div>
    </header>
    <div class="parallax" style="background-image: url('../../images/fire_cat.jpg')">
      <div class="parallax-title" id="ptitle">{{ title }}</div>
      <div class="parallax-subtitle" id="psubtitle">{{ subtitle }}</div>
      <script type="text/javascript">
        $(function() {
          var hm = -1 * document.getElementById('ptitle').clientWidth / 2;
          var hmm = -1 * document.getElementById('psubtitle').clientWidth / 2;
          document.getElementById('ptitle').style.marginLeft = hm.toString() + "px";
          document.getElementById('psubtitle').style.marginLeft = hmm.toString() + "px";
        });
      </script>
    </div>
    <main class="site-main">
      <div class="container">
        <div class="post-information">
          <div class="post-info-top">
            <div class="post-info-item"><h1>{{ title }}</h1></div>
          </div>
          <div class="post-info-middle">
            <div class="post-info-item"><h2>{{ subtitle }}</h2></div>
          </div>
          <div class="post-info-bottom">
            <div class="post-info-item">By {{ author }}</div>
            <div class="post-info-item" id="dates">Published {{ date }}</div>
            <script type="text/javascript">
              $(function() { document.getElementById('dates').innerHTML = document.getElementById('dates').innerHTML.slice(0, document.getElementById('dates').innerHTML.indexOf(":")-2);});
            </script>
          </div>
        </div>
        <div class="post-content">
          {{ content }}
        </div>
        <div class="comments-container">
          <h1 id="comments-total">Comments</h1>
          <div class="enter-comment-container">
            <form id="enter-comment">
              Name: <input type="text" name="author_name" maxlength="100" style="width: 100%; max-width: 100%">
              <br> Comment: <br>
                  <textarea name="new_comment" rows="5" cols="500" style="width: 100%; max-width: 100%;"></textarea>
              <input type="button" class="post-comment-button" value="Post comment" onclick="enterComment({{ id }}, 'NONE')">
            </form>
          </div>
          <div class="comments-list-container", id="cmtslc">
          </div>
          <script type="text/javascript">
          fetchComments({{ id }});
          </script>
        </div>
      </div>
    </main>
  </body>
</html>
